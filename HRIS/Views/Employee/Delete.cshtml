@model HRIS.Models.UpdateEmployee
@{
}

<div class="container w-75 bg-white p-4">
    <h3 class="mb-3">DELETE EMPLOYEE</h3>
    <form method="post" asp-action="Delete">
        <div class="row g-2">
            <div class="mb-3">
                <label for="" class="form-label">Employee Id</label>
                <input type="text" class="form-control" asp-for="EmployeeId" readonly>
            </div>
            <div class="col-lg-4 col-md-6">
                <label for="" class="form-label">First Name</label>
                <input type="text" class="form-control" asp-for="FirstName" readonly>
            </div>
            <div class="col-lg-4 col-md-6">
                <label for="" class="form-label">Middle Name</label>
                <input type="text" class="form-control" asp-for="MiddleName" readonly>
            </div>
            <div class="col-lg-4 col-md-6">
                <label for="" class="form-label">Last Name</label>
                <input type="text" class="form-control" asp-for="LastName" readonly>
            </div>
            
        <div class="mt-3 btn-group">
            <button type="submit" class="btn btn-danger">Delete Employee</button>
            <a asp-controller="Employee" asp-action="Index" class="btn btn-secondary">Back to list</a>
        </div>

    </form>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}